<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/room_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/room_deadline"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="3dp"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_background"
        android:maxWidth="64dp"
        android:maxHeight="64dp"
        android:src="@drawable/ic_person" />

    <TextView
        android:id="@+id/room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 제목"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/room_host"/>

    <TextView
        android:id="@+id/room_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매 위치"
        android:layout_below="@id/room_title"
        android:layout_alignLeft="@id/room_title"
        />

    <TextView
        android:id="@+id/room_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용 기한"
        android:layout_below="@id/room_location"
        android:layout_alignLeft="@id/room_title"
        />

    <TextView
        android:id="@+id/room_content"
        android:text="나눔 방 소개글"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/room_deadline"
        android:layout_alignLeft="@id/room_host"
        />

</RelativeLayout>
